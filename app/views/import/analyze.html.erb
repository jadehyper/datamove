
<%= form_tag import_analyze_path, :method => 'get' do %>
Temp table from latest import:
    <%= select_tag :temp_db_table, options_for_select(TempDb.get_tables, params[:temp_db_table]), :onchange => 'this.form.submit()', :prompt => 'Select a table' %>
<% end %>


<%= form_tag import_analyze_path, :method => 'get' do %>
Permanent table:
    <%= select_tag :permanent_db_table, options_for_select(PermanentDb.get_tables, params[:permanent_db_table]), :onchange => 'this.form.submit()', :prompt => 'Select a table' %>
<% end %>


<% if @temp_table_def %>
  <h3>Table definition:</h3>
  <table>
    <tr>
      <th>Field</th> 
      <th>Type</th> 
      <th>Null</th>
      <th>Key</th>
      <th>Default</th> 
      <th>Extra</th>
    </tr>

  <% @temp_table_def.each do |record| %>
    <tr>
      <% record.each do |content| %>
        <td>
          <%= content %>
        </td>
      <% end %>
    </tr> 
  <% end %>
  </table>
<% end %>

<% if @temp_db_data %>
  <br>
  <h3>Table data:</h3>
  <table>
    <% @temp_db_data.each_with_index do |record, i| %>  
      <% if i == 0 %>
        <!-- write out header row -->
        <tr>
          <% record.each do |key, value| %>
            <th><%= key %></th> 
          <% end %>
        </tr>
      <% end %>
      
      <tr>
        <% record.each do |key, value| %>
          <td><%= value %></td> 
        <% end %>
      </tr>    
    <% end %>

  </table>

<% end %>



